<section>
    <h1> Forum de discussion </h1>
    <table>
        <tr>
            <th>Message</th><th>Auteur</th>
        </tr>
        {{#each messagesTable}}
        <tr>
            <td>{{this.message}} </td> <td>{{this.author}} </td> 
        </tr>
        {{/each}}
    </table>
</section>
<section>
    <h1>Laissez un message</h1>
    <form method="post" action="/forum/add">
        <div>
            <label> Message : </label>
            <textarea name="message"></textarea>
        </div>
        <div>
            <label>Auteur : </label>
            <input type="text" name="author">
        </div>
        <div>
            <input type="submit">
        </div>
    </form>
</section>



